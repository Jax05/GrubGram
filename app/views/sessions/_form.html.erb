<% flash.each do |type, msg| %>
  <div class="bg-error">
    <%= msg %>
  </div>
<% end %>

<%= form_for :user do |f| %>
    <%= label_tag :email, "Email:" %>
    <%= f.text_field :email %><br />

    <%= label_tag :password, "Password:" %>
    <%= f.password_field :password %><br />

    <%= f.submit 'Log In' %>
<% end %>